<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2 style="color:grey;">Log in</h2>
          </div>
          <!--<form>-->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
              <div class="form-group">
                <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control input-lg' } %>
              </div>
              <div class="form-group">
                <%= f.input :password, required: false, input_html: { class: 'form-control input-lg' } %>
              </div>
              <div class="form-group">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-group">
                <%= f.button :submit, "Log in", class: 'btn-lg btn-info btn-block' %>
              </div>
              <!-- render "devise/shared/links">-->
            </div>
          <% end %>
          <!--</form>-->
        </div>
      </div>
    </div>
  </div>
</div>